<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <title>Document</title>
  </head>
  <style>
/*
* Prefixed by https://autoprefixer.github.io
* PostCSS: v8.4.14,
* Autoprefixer: v10.4.7
* Browsers: last 4 version
*/

* {
      margin: 0;
      padding: 0;
      -webkit-box-sizing: border-box;
              box-sizing: border-box;
    }

    html,
    body {
      width: 100%;
      height: 100%;
    }

    #main {
      width: 100%;
      height: 100%;
      /* background-color: rgb(166, 107, 169); */
      background: -webkit-gradient(linear, left top, right top, from(purple), to(red));
      background: -o-linear-gradient(left, purple, red);
      background: linear-gradient(to right, purple, red);
      display: -webkit-box;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-align: center;
          -ms-flex-align: center;
              align-items: center;
      -webkit-box-pack: center;
          -ms-flex-pack: center;
              justify-content: center;
    }

    #savedPosts {
      width: 45%;
      height: 100%;
      background-color: black;
      color: white;
      font-family: gilroy;
      /* overflow: hidden; */
      position: relative;
    }

    #nav {
      width: 100%;
      display: -webkit-box;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-align: center;
          -ms-flex-align: center;
              align-items: center;
      gap: 10px;
      padding: 10px;
      padding-left: 20px;
    }

    #nav i {
      font-size: 30px;
    }

    #nav h1 {
      font-weight: 400;
      text-transform: capitalize;
    }

    #nav a {
      text-decoration: none;
      color: white;
    }

    #savedPosts-container {
      display: -webkit-box;
      display: -ms-flexbox;
      display: flex;
      -ms-flex-wrap: wrap;
          flex-wrap: wrap;
      gap: 10px;
      width: 100%;
      height: 90%;
      /* background-color: antiquewhite; */
      padding-left: 20px;
      overflow: auto;
    }

    .img{
        width: 200px;
        height: 200px;
    }

    #savedPosts-container img {
      width: 100%;
      height: 100%;
    }

    @media (max-width: 800px) {
      #savedPosts {
        width: 100%;
      }
    }
  </style>

  <body>
    <div id="main">
      <div id="savedPosts">
        <div id="nav">
          <a href="/feed"><i class="ri-arrow-left-line"></i></a>
          <h1>saved posts</h1>
        </div>

        <div id="savedPosts-container">
          <% posts.forEach(function(post){ %> <%
          if(user.savedPosts.includes(post._id)){ %>
            <div class="img">
                <img src="<%= post.media %>" alt="" />
            </div>
            <% } else{ %>
                <div style="display: none" class="img">
                    <img src="<%= post.media %>" alt="" />
                </div>
          <% } %> <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
